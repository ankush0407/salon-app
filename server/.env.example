# Backend Environment Configuration Template
# Copy this to .env and fill in your actual values

# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_URL=postgresql://username:password@localhost:5432/salon_tracker

# ===========================
# JWT AUTHENTICATION
# ===========================
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# ===========================
# STRIPE PAYMENT INTEGRATION
# ===========================
# Get these from: https://dashboard.stripe.com/apikeys
# Test keys start with 'test_', live keys start with 'live_'
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# ===========================
# CLERK AUTHENTICATION (if using Clerk for customer portal)
# ===========================
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx

# ===========================
# APPLICATION SETTINGS
# ===========================
# Set to 'development', 'staging', or 'production'
NODE_ENV=development

# Port the server runs on
PORT=5000

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# ===========================
# EMAIL CONFIGURATION (Optional - for future use)
# ===========================
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@yourdomain.com
